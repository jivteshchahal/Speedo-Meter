            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/licence" />
<!--        </androidx.constraintlayout.widget.ConstraintLayout>-->
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>